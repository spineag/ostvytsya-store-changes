              </svg>
            </button>
          </div> #}
          <div class="input-group wContent ms-4">
            <label for="input-sort" class="input-group-text_ost">{{ text_sort }}</label> 
            <select id="input-sort" class="form-select_ost" onchange="location = this.value;">
              {% for sorts in sorts %}
                <option value="{{ sorts.href }}"{% if sorts.value == '%s-%s'|format(sort, order) %} selected{% endif %}>{{ sorts.text }}</option>
              {% endfor %}
            </select>
          </div>
          <div class="input-group wContent ms-4">
            <label for="input-limit" class="input-group-text_ost">{{ text_limit }}</label> 
            <select id="input-limit" class="form-select_ost" onchange="location = this.value;">
              {% for limits in limits %}
                <option value="{{ limits.href }}"{% if limits.value == limit %} selected{% endif %}>{{ limits.text }}</option>
              {% endfor %}
            </select>
          </div>
        </div>
  
        {# <div id="product-list" class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-4">
          {% for product in products %}
            <div class="col">{{ product }}</div>
          {% endfor %}
        </div> #}
        
        <div class="grid-container_ost">
          {% for product in products %}
            <div class="grid-cell_ost">{{ product }}</div>
          {% endfor %}
        </div>

         <div class="row module-heading_ost">
          <div class="col-sm-6 text-start">{{ pagination }}</div>
          <div class="col-sm-6 text-end">{{ results }}</div>
        </div>
      {% endif %}

      {% if not categories and not products %}
        <p>{{ text_no_results }}</p>
        {# <div class="d-inline-block pt-2 pd-2 w-100">
          <div class="float-end"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
        </div>  #}
      {% endif %}
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>

{{ footer }}
