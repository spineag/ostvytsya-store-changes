{% if products %}
  <div class="table-responsive">
    <table class="table table-bordered table_ost">
      <thead>
        <tr>
          <td class="text-center">{{ column_image }}</td>
          <td class="text-center">{{ column_name }}</td>
          <td class="text-center">{{ column_model }}</td>
          <td class="text-center">{{ column_stock }}</td>
          <td class="text-center">{{ column_price }}</td>
          <td class="text-center">{{ column_action }}</td>
        </tr>
      </thead>
      <tbody>
        {% for product in products %}
          <tr>
            <td class="text-center">{% if product.thumb %}<a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="small_image_ost"/></a>{% endif %}</td>
            <td class="text-start inner_a"> <a href="{{ product.href }}">{{ product.name }}</a> </td>
            <td class="text-start">{{ product.model }}</td>
            <td class="text-end">{{ product.stock }}</td>
            <td class="text-end">
              {% if product.price %}
                <div class="price">
                  {% if not product.special %}
                    {{ product.price }}
                  {% else %}
                    <b>{{ product.special }}</b> <s>{{ product.price }}</s>
                  {% endif %}
                </div>
              {% endif %}
            </td>
            <td class="text-center">
              <form method="post" data-oc-toggle="ajax" data-oc-load="{{ wishlist }}" data-oc-target="#wishlist">
                <input type="hidden" name="product_id" value="{{ product.product_id }}"/> <input type="hidden" name="quantity" value="{{ product.minimum }}"/>
                <button type="submit" formaction="{{ add_to_cart }}" data-bs-toggle="tooltip" {#title="{{ button_cart }}"#} class="btn btn_ost btn_ost_grey mb-2 stroke-none w60">
                  {# <i class="fa-solid fa-cart-shopping fa-fw"></i> #}
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="inherit" viewBox="0 0 16 16">
                    <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z"/>
                  </svg>
                </button>
                <button type="submit" {formaction="{{ remove }}" data-bs-toggle="tooltip" #title="{{ button_remove }}"#} class="btn btn_ost btn_ost_grey stroke-none w60">
                  {# <i class="fa-solid fa-circle-xmark fa-fw"></i> #}
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="inherit" viewBox="0 0 16 16">
                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                  </svg>

                </button>
              </form>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% else %}
  <p>{{ text_no_results }}</p>
{% endif %}
