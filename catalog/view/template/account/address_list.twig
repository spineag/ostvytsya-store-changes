{% if addresses %}
  <div class="table-responsive">
    <table class="table table-bordered table_ost">
      {% for address in addresses %}
        <tr>
          <td class="text-start">{{ address.address }}</td>
          <td class="text-end">
            <a href="{{ address.edit }}" class="btn btn_ost btn_ost_grey">
              <span class="btn_ost_subtext">{{ button_edit }}</span>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="inherit" class="w-6 h-6 btn_ost_subicon">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
              </svg>
            </a> 
            <a href="{{ address.delete }}" class="btn btn_ost btn_ost_grey">
              <span class="btn_ost_subtext">{{ button_delete }}</span>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="inherit" class="w-6 h-6 btn_ost_subicon">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </a>
          </td>
        </tr>
      {% endfor %}
    </table>
  </div>
{% else %}
  <p>{{ text_no_results }}</p>
{% endif %}