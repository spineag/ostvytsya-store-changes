<div class="table-responsive">
  <table class="table table-bordered table_ost hidden_ontablet_ost">
    <tbody>
      {% for product in products %}
        <tr class="checkout-thumb_ost">
          <td class="text-center image_part">{% if product.thumb %} <a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="small_image_ost"/></a> {% endif %}</td>
          <td class="text-start text-wrap title_part">
            <a href="{{ product.href }}">{{ product.name }}  ({{ product.model }})</a>
            {% if not product.stock %} <span class="text-danger">***</span>{% endif %}
          </td>
          <td class="text-start">
            <form method="post" data-oc-target="#shopping-cart">
              <div class="d-flex justify-content-around align-items-center">
                <div class="d-flex w-auto checkout_change_count">
                  <button type="submit" formaction="{{ product_minus }}" data-bs-toggle="tooltip" class="btn btn_ost btn_ost_noui p-0 {{ product.quantity > 1 ? '' : 'disabled' }}">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="inherit" stroke="inherit" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12h-15" />
                    </svg>
                  </button>
                  <div class="d-flex justify-content-around align-items-center">
                    <input type="text" name="quantity" value="{{ product.quantity }}" size="2" class="form-control border-0 p-0 w40 text-center pe-none">
                    <input type="hidden" name="key" value="{{ product.cart_id }}">
                  </div>
                  <button type="submit" formaction="{{ product_plus }}" data-bs-toggle="tooltip" class="btn btn_ost btn_ost_noui p-0">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="inherit" stroke="inherit" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                    </svg>
                  </button>
                </div>
                <button type="submit" formaction="{{ product_remove }}" data-bs-toggle="tooltip" {#title="{{ button_remove }}"#} class="div_like-small-button">
                   <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="inherit" viewBox="0 0 16 16">
                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"></path>
                  </svg>
                </button>
              </div>
            </form>
          </td>
          <td class="text-end">{{ product.total }}</td>
        </tr>
      {% endfor %}
    </tbody>

    <tfoot id="checkout-total">
      {% for total in totals %}
        <tr>
          <td colspan="3" class="text-end"> {{ total.title }} </td>
          <td class="text-end"><b>{{ total.text }}</b></td>
        </tr>
      {% endfor %}
    </tfoot>
  </table>


